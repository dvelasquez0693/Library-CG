@model Library.Models.Student

<h4>Students</h4>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input name="Name" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Address"></label>
        <input name="Address" class="form-control" asp-for="Address" />
        <span asp-validation-for="Address"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Age"></label>
        <input name="Age" class="form-control" asp-for="Age" />
        <span asp-validation-for="Age"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Career"></label>
        <input name="Career" class="form-control" asp-for="Career" />
        <span asp-validation-for="Career"></span>
    </div>
    <div>
        <input class="btn btn-primary" type="submit" value="Grabar" />
    </div>
</form>

<div>
    <a asp-action="Index">Volver</a>
</div>